<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
   
    <div class="form">
      <% if (user) { %>
        <form class="form-inline justify-content-right" action="/logout" method="POST">
          <div class="form-group">
            <label style="margin: 0.75em">Logged in as: <%= user.email %>!</label>         
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </div>
        </form>
        <% } else { %>
          <form class="form-inline justify-content-right">
            <div class="form-group" action="/login" method="POST">
              <button type="submit" class="btn" style="color: #fff; font-size: 1.2rem">Login</button>
            </div>
            <div class="form-group" action="/register" method="POST">
              <button type="submit" class="btn" style="color: #fff; font-size: 1.2rem">Register</button>
            </div>
          </form>
        <% } %>
    </div>
    
  </nav>
</header>

<form class="form-inline justify-content-right">
  <div class="form-group" action="/login" method="POST">
    <button type="submit" class="btn" style="color: #fff">Login</button>
  </div>
  <div class="form-group" action="/register" method="POST">
    <button type="submit" class="btn" style="color: #fff">Register</button>
  </div>
</form>